<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oip"
    tools:context=".StatActivity">


    <TextView
        android:id="@+id/workout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="78dp"
        android:text="Stats"
        android:textColor="#F4F2F2"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="166dp"
        android:text="Age:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/age_1"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="166dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="numberSigned"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/height"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/age"
        android:text="Height:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/height_1"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_below="@+id/age_1"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="numberSigned"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="132dp"
        android:layout_below="@+id/height"
        android:text="Weight:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weight_1"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_below="@+id/height_1"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="numberSigned"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="132dp"
        android:layout_below="@+id/weight"
        android:text="Goal Weight:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/goal2"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_below="@+id/weight_1"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="numberSigned"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:text="Enter"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        app:rippleColor="#000000" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oip"
    tools:context=".PreferenceActivity">


    <TextView
        android:id="@+id/workout_pref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="80dp"
        android:text="Create New Account"
        android:textColor="#F4F2F2"
        android:textSize="34sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/goal_2"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="166dp"
        android:text="Goals:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/goalsId2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="166dp"
        android:background="#FFFEFE"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/training_type"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="225dp"
        android:text="Type Of Training:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/trainingId"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/time"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:text="Timetable :"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/time2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:text="Goal Weight:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/goal2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="numberSigned"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:background="#000000"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        app:rippleColor="#000000" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="10dp"
        android:text="Username/Email:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/passwordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginStart="10dp"
        android:text="Password:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/userNameId"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="250dp"
        android:background="#FFFEFE"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/passwordId2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="250dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="#FFFEFE"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>


</RelativeLayout>